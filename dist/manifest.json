{
  "manifest_version": 3,
  "name": "我的Chrome扩展",
  "version": "1.0.0",
  "description": "一个使用Manifest V3的Chrome扩展",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content.js-D0YWr3Qm.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/content.js-D0YWr3Qm.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
